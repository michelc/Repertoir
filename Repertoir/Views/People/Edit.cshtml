@model Repertoir.Models.ViewPerson

@{
    ViewBag.Title = "Modifier une personne";
}

<h2 class="crud">
    @Html.ActionCrud(Model.Contact_ID, Model.Slug)
</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset class="sixteen columns">
        <legend>@Model.DisplayName</legend>

        @Html.HiddenFor(model => model.Contact_ID)
        @Html.Partial("_Editor", Model)
 
        <p class="offset-by-five eleven columns alpha">
            <input type="submit" value="Enregistrer" />
            @Html.ActionCancel(Model.Contact_ID, Model.Slug)
        </p>
    </fieldset>
}

@section JavaScript
{
    @Html.Partial("_FormScripts")
}