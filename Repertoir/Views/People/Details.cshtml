@model Repertoir.Models.ViewPerson

@{
    ViewBag.Title = "Afficher une personne";
}

<h2 class="crud">
    @Html.ActionLink("Contacts", "Index", "Contacts")
    / @Html.ActionLink("Créer", "Create")
    / Afficher
    / @Html.ActionLink("Modifier", "Edit", new { id = Model.ID })
    / @Html.ActionLink("Supprimer", "Delete", new { id = Model.ID })
</h2>

<fieldset class="sixteen columns">
    <legend>@Model.FirstName @Model.LastName</legend>
    @Html.Partial("_Display", Model)
</fieldset>