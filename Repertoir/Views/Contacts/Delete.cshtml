@model Repertoir.Models.Contact

@{
    ViewBag.Title = "Supprimer un contact";
}

<h2>@ViewBag.Title</h2>

<fieldset class="sixteen columns">
    <legend>Confirmez-vous la suppression ?</legend>

    <div class="display-label one-third column alpha">
        @Html.LabelFor(model => model.ContactName)
    </div>
    <div class="display-field two-thirds column omega">
        @Html.DisplayFor(model => model.ContactName)
    </div>

    <div class="display-label one-third column alpha">
        @Html.LabelFor(model => model.Phone)
    </div>
    <div class="display-field two-thirds column omega">
        @Html.DisplayFor(model => model.Phone)
    </div>

    <div class="display-label one-third column alpha">
        @Html.LabelFor(model => model.Email)
    </div>
    <div class="display-field two-thirds column omega">
        @Html.DisplayFor(model => model.Email)
    </div>
    @using (Html.BeginForm())
    {
        <p class="offset-by-third two-thirds column alpha">
            <input type="submit" value="Ok pour supprimer !" />
            @Html.ActionLink("Annuler", "Index")
        </p>
    }
</fieldset>
