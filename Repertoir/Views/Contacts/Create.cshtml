@model Repertoir.Models.Contact

@{
    ViewBag.Title = "Créer un contact";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset class="sixteen columns">
        <legend>Nouveau contact</legend>

        @Html.Partial("_Editor", Model)

        <p class="offset-by-third two-thirds column alpha">
            <input type="submit" value="Enregistrer" />
            @Html.ActionLink("Annuler", "Index")
        </p>
    </fieldset>
}

@section JavaScript
{
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}