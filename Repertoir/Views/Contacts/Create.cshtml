@model Repertoir.Models.Contact

@{
    ViewBag.Title = "Créer un contact";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset class="sixteen columns">
        <legend>Nouveau contact</legend>

        @Html.Partial("_Editor", Model)

        <p class="offset-by-third two-thirds column alpha">
            <input type="submit" value="Enregistrer" />
            @Html.ActionLink("Annuler", "Index")
        </p>
    </fieldset>
}

@section JavaScript
{
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {

        /* Associe la classe CSS "is_required" aux labels des zones de saisie obligatoires */
        /* ------------------------------------------------------------------------------- */
        $(":input[data-val-required]").parent("div.editor-field").prev().addClass("is_required");

        /* Suffixe d'une astérisque les labels des zones de saisie obligatoires */
        /* -------------------------------------------------------------------- */
        $(":input[data-val-required]").parent("div.editor-field").prev().find("label").append("<span>*</span>");

    });
</script>
}