@model IEnumerable<Repertoir.Models.ContactList>

@{
    ViewBag.Title = "Tous les contacts";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Créer", "Create", "People")
</p>
<table>
<thead>
    <tr>
        <th>
            @Html.LabelFor(model => model.First().LastName)
        </th>
        <th>
            @Html.LabelFor(model => model.First().FirstName)
        </th>
        <th>
            @Html.LabelFor(model => model.First().Phone1)
        </th>
        <th>
            @Html.LabelFor(model => model.First().Email)
        </th>
        <th></th>
    </tr>
</thead>
<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Afficher", "Details", "People", new { id = item.ID }, null) |
            @Html.ActionLink("Modifier", "Edit", "People", new { id = item.ID }, null) |
            @Html.ActionLink("Supprimer", "Delete", "People", new { id = item.ID }, null)
        </td>
    </tr>
}
</tbody>
</table>
