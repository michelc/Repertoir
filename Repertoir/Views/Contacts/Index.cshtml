@model IEnumerable<Repertoir.Models.ContactList>

@{
    ViewBag.Title = "Tous les contacts";
}

<h2 class="crud">
    Contacts
    /
    @Html.ActionLink("Créer une personne", "Create", "People")
    /
    @Html.ActionLink("Créer une société", "Create", "Companies")
</h2>

<table>
<thead>
    <tr>
        <th>
            @Html.LabelFor(model => model.First().DisplayName)
        </th>
        <th>
            @Html.LabelFor(model => model.First().Phone1)
        </th>
        <th>
            @Html.LabelFor(model => model.First().Email)
        </th>
        <th></th>
    </tr>
</thead>
<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DisplayName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Afficher", "Details", item.ControllerName, new { id = item.ID }, null) |
            @Html.ActionLink("Modifier", "Edit", item.ControllerName, new { id = item.ID }, null) |
            @Html.ActionLink("Supprimer", "Delete", item.ControllerName, new { id = item.ID }, null)
        </td>
    </tr>
}
</tbody>
</table>
